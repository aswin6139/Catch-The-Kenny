<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimer">

        <ImageView
            android:id="@+id/ivKenny1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="3"
            app:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="3"
            app:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="3"
            app:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="3"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny14"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="3"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny15"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="3"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny16"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="3"
            app:layout_row="3"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny17"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="4"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny18"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="4"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny19"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="4"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/ivKenny20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="3"
            app:layout_row="4"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kennymccormick" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Time: 15"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>